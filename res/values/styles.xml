<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="tv_home_item">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#7e7e7e</item>
    </style>
    
    
    
    <!-- app title text文本样式 -->
    <style name="app_titleStyle_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <style name="app_titleStyle_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
    </style>
    
    <!-- app content text big文本样式 -->
    <style name="app_big_textStyle_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="app_big_textStyle_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!-- app content text namal文本样式 -->
    <style name="app_textStyle_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="app_textStyle_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    
    <!-- app content text medium 文本样式 -->
    <style name="app_medium_textStyle_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="app_medium_textStyle_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>


    <!-- app content text small 文本样式 -->
    <style name="app_small_textStyle_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>

    <style name="app_small_textStyle_white">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_small</item>
    </style>
    
      <!-- app content text small 文本样式 -->
    <style name="app_little_textStyle_black">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_little</item>
    </style>
    
    <style name="sys_settings_tv">
         <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">@drawable/pressed_selector</item>
    </style>


</resources>
