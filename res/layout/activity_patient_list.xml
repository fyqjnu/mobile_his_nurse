<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg"
    android:orientation="vertical" xmlns:app="http://schemas.android.com/apk/res/com.his.nurse">

    <com.his.nurse.widget.Header
        android:id="@+id/patient_list_header"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/header_height" >
    </com.his.nurse.widget.Header>

    <com.his.nurse.widget.SearchView
        android:id="@+id/patient_list_search_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.his.nurse.widget.SearchView>
    <com.his.nurse.widget.jazzylistview.JazzyListView 
        android:id="@+id/patient_list_listview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:dividerHeight="@dimen/listview_diverder_height"
        app:effect="slide_in"
        app:only_animate_new_items="false"
        app:only_animate_fling="false"
        app:max_velocity="0">
        
    </com.his.nurse.widget.jazzylistview.JazzyListView>

</LinearLayout>