<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/nurse_my_patient__item_shape"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_nursing_level_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nurse_nursing_level_1" />

            <TextView
                android:id="@+id/tv_bedno"
                style="@style/app_medium_textStyle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="1001" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/iv_enter_doctor_advice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/nurse_patient_detail_icon" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/app_medium_textStyle_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="刘建国" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tv_sex"
            style="@style/app_medium_textStyle_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="男" />

        <TextView
            android:id="@+id/tv_age"
            style="@style/app_medium_textStyle_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:text="63岁" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_check_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="3dp"
        android:layout_marginTop="5dp"
        android:text="左物血球管瘤左物血球管瘤"
        android:textColor="#ff8300"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_hos_no"
        style="@style/app_medium_textStyle_black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="5dp"
        android:text="100102045" />

</LinearLayout>