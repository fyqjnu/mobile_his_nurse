<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:padding="3dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <TextView 
            android:id="@+id/item_patient_tv_bed_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="1003"
            android:layout_weight="1"
            />
          <TextView 
            android:id="@+id/item_patient_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="刘建国"
            android:layout_weight="1"
            />
          <TextView 
            android:id="@+id/item_patient_tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="男"
            android:layout_weight="1"
            />
            <TextView
            android:id="@+id/item_patient_tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="23岁"
            android:layout_weight="1"
            />
            <TextView
            android:id="@+id/item_patient_tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="在院16天"
            android:layout_weight="1"
            />
            <TextView
            android:id="@+id/item_patient_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="141003"
            android:layout_weight="1"
            />
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        >
          <TextView
            android:id="@+id/item_patient_tv_priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="一级护理"
            android:layout_weight="1"
            />
          <TextView
            android:id="@+id/item_patient_tv_food_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="低盐饮食"
            android:layout_weight="1"
            />
            <TextView
            android:id="@+id/item_patient_tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="广州职工医保"
            android:layout_weight="1"
            />
    </LinearLayout>
    
    <LinearLayout 
         android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        >
         <TextView
            android:id="@+id/item_patient_tv_danger_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="无危重级别"
            android:layout_weight="1"
            />
         <TextView
            android:id="@+id/item_patient_tv_ill_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="肝炎"
            android:layout_weight="1"
            />
          <TextView
            android:id="@+id/item_patient_tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:text="主管医生：张明"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
