<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="2.7"
        android:layout_height="fill_parent"
        >
        <include 
            layout="@layout/include_item_patient"
            />   
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="vertical"
         android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="fill_parent"
        android:padding="3dp"
        >
             <TextView 
            android:id="@+id/item_patient_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:text="刘建国"
            android:layout_weight="1"
            />
             <TextView
            android:id="@+id/item_patient_tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:text="141003"
            android:layout_weight="1"
            />
          <TextView 
            android:id="@+id/item_patient_tv_sex_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:text="男"
            android:layout_weight="1"
            />
          <TextView
            android:id="@+id/item_patient_tv_food_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:text="低盐饮食"
            android:layout_weight="1"
            />
            
    </LinearLayout>
    
    <LinearLayout 
         android:orientation="vertical"
         android:layout_width="0dp"
        android:layout_weight="4"
        android:layout_height="fill_parent"
        android:padding="3dp"
        >
         
          <TextView
            android:id="@+id/item_patient_tv_doctor_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:text="主管医生：张明"
            android:layout_weight="1"
            />
         <TextView
            android:id="@+id/item_patient_tv_ill_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:text="入院诊断：肝炎"
            android:layout_weight="1"
            />
          <TextView
            android:id="@+id/item_patient_tv_days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:text="在院16天"
            android:layout_weight="1"
            />
          <TextView
            android:id="@+id/item_patient_tv_pay_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/text_grey"
            android:text="广州职工医保"
            android:layout_weight="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.3"
         android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:gravity="center"
        >
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/right_arrow"
        />
    </LinearLayout>

</LinearLayout>
