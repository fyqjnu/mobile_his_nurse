<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/item_background"
        android:orientation="vertical"

        >
        
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView 
                android:padding="3dp"
                android:id="@+id/item_check_drug_tv_drug_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/app_medium_textStyle_black"
                android:text="注射用白眉蛇毒血液酶（邦亭）"
                />
            
            <LinearLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >
            <TextView 
                android:padding="3dp"
                android:id="@+id/item_check_drug_tv_spec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/app_medium_textStyle_black"
                android:text="250.ml/瓶"
                />
            <ImageView 
                android:layout_width="1px"
                android:layout_height="@dimen/textsize_medium"
                android:background="#7e7e7e"
                android:layout_gravity="center_vertical"
                />
            <TextView 
                android:padding="3dp"
                android:id="@+id/item_check_drug_tv_dosage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/app_medium_textStyle_black"
                android:text="250.ml"
                />
            <ImageView 
                android:layout_width="1px"
                android:layout_height="@dimen/textsize_medium"
                android:background="#7e7e7e"
                android:layout_gravity="center_vertical"
                />
            <TextView 
                android:padding="3dp"
                android:id="@+id/item_check_drug_tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/app_medium_textStyle_black"
                android:text="1瓶"
                />
            </LinearLayout>
        </LinearLayout>
        
        <LinearLayout 
             android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
             <TextView 
                 android:padding="3dp"
                android:id="@+id/item_check_drug_tv_nurse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/app_medium_textStyle_black"
                android:text="方丽丽"
                android:layout_weight="1"
                />
                  <TextView 
                      android:padding="3dp"
                android:id="@+id/item_check_drug_tv_check_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/app_medium_textStyle_black"
                android:text="2014-04-09 10:00"
                 android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
